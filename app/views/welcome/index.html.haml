%div{:class => "prefix_2 grid_12"}
  %div{:style => 'float:left'}
    = image_tag event_map_url(@next_event)
  %div{:class => "prefix_1 grid_3", :style => "text-align:center;"}
    = render :partial => @next_event.nil? ? 'events/no_next' : 'events/home'

%div{:class => 'grid_12 prefix_2'}
  %section{:id => 'members-list', :class => "grid_3 big4", :style => 'margin: 0px; width:300px'}
    %h2{:style => 'text-align: center'}
      = I18n.t('.lyonrb.people')
    %ul
      - @members.each do |member|
        %li
          %a{:href => "http://github.com/#{member.login}", :title =>  member.name || member.login}
            = image_tag member.avatar, :height => 50, :width => 50, :alt => member.name || member.login

  %section{:id => 'projects-list', :class => "grid_3 big4"}
    %h2{:style => 'text-align: center'}
      = I18n.t('.lyonrb.projects')
    %ul
      - @projects.each do |project|
        %li
          %a{:href => project.homepage, :title => project.name}
            = project.name
          = project.description

  %section{:id => 'posts-list', :class => "grid_3 big4"}
    %h2{:style => 'text-align: center'}
      = I18n.t('.lyonrb.blog.last_posts')
    %ul
      - @posts.each do |post|
        %li
          = link_to post do
            = post.title
